<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondo_login"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".AuthActivity">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:background="#BF4087BF"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="176dp"
            android:layout_height="169dp"
            app:srcCompat="@mipmap/imagenpricipal"
            tools:layout_editor_absoluteX="117dp"
            tools:layout_editor_absoluteY="58dp" />

        <EditText
            android:id="@+id/txt_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/txt_contrasena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:ems="10"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColorHint="@color/white"
            tools:layout_editor_absoluteY="311dp" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="137dp"
            android:layout_height="59dp"
            android:backgroundTint="#06FA10"
            android:text="Ingresar"
            android:textColor="@color/design_default_color_background" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:backgroundTint="#031cfc"
            android:text="Registrarme"
            android:textColor="@color/design_default_color_background" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No cerrar sesión" />

    </LinearLayout>
</LinearLayout>